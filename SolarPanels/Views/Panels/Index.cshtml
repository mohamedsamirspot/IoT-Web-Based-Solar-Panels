@model IEnumerable<SolarPanels.Models.Entites.Panel>

@{
    ViewData["Title"] = "Index";
}

<div style="padding:80px">
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <table class="table table-bordered">
        <thead>
            <tr class="bg-dark" style="color:white">
                <th>
                    Panel Number
                </th>
                <th>
                    Current Mode
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Panel_ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Current_Mode)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a> |
                        <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>